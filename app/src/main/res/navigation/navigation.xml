<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">

    <fragment
        android:id="@+id/hitungFragment"
        android:name="org.d3if2103.mitibleday.ui.hitung.HitungFragment"
        android:label="Aplikasi Zakat"
        tools:layout="@layout/fragment_hitung" >
        <action
            android:id="@+id/action_hitungFragment_to_tuntunanFragment"
            app:destination="@id/tuntunanFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_historiFragment"
            app:destination="@id/historiFragment" />
    </fragment>
    <fragment
        android:id="@+id/tuntunanFragment"
        android:name="org.d3if2103.mitibleday.ui.TuntunanFragment"
        android:label="Tuntunan Zakat"
        tools:layout="@layout/fragment_tuntunan"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if2103.mitibleday.ui.about.AboutFragment"
        android:label="Tentang Aplikasi"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/historiFragment"
        android:name="org.d3if2103.mitibleday.ui.histori.HistoriFragment"
        android:label="@string/histori"
        tools:layout="@layout/fragment_histori" />
</navigation>